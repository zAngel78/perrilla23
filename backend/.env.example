# Server Configuration
PORT=3001

# Fortnite API
FORTNITE_API_KEY=tu-api-key-aqui

# JWT Secret (genera uno seguro en producción)
JWT_SECRET=tu-secret-super-seguro-cambialo-en-produccion

# JWT Expiration (7 días por defecto)
JWT_EXPIRES_IN=7d

# CORS Origins (separados por coma)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Environment
NODE_ENV=development

# MercadoPago Credentials
MERCADOPAGO_ACCESS_TOKEN=tu-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=tu-mercadopago-public-key

# Mailgun Credentials
MAILGUN_API_KEY=tu-mailgun-api-key
MAILGUN_DOMAIN=tu-dominio.com
MAILGUN_FROM_EMAIL=noreply@tu-dominio.com

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001
